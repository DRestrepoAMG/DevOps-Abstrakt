<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>57.0</apiVersion>
    <description>V2 - changed condition to use % to Appt Goal Actual instead of the previous formula
Objective: When an account first meets their appointment goal, update the Dials to Appt field by dividing Actual Calls This Month by Appts This Month.</description>
    <environments>Default</environments>
    <formulas>
        <description>The number of dials made to reach the appointment goal</description>
        <name>forDialstoAppt</name>
        <dataType>Number</dataType>
        <expression>{!$Record.Actual_Calls_This_Month__c} / {!$Record.Appts_This_Month__c}</expression>
        <scale>0</scale>
    </formulas>
    <interviewLabel>Account: Dials to Appointment Update {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Account: Dials to Appointment Update</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>FREE_FORM_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>Update_Dials_to_Appointment</name>
        <label>Update Dials to Appointment</label>
        <locationX>660</locationX>
        <locationY>406</locationY>
        <inputAssignments>
            <field>Dials_to_Appt__c</field>
            <value>
                <elementReference>forDialstoAppt</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>532</locationX>
        <locationY>42</locationY>
        <connector>
            <targetReference>Update_Dials_to_Appointment</targetReference>
        </connector>
        <doesRequireRecordChangedToMeetCriteria>true</doesRequireRecordChangedToMeetCriteria>
        <filterLogic>and</filterLogic>
        <filters>
            <field>to_Appt_Goal_Actual__c</field>
            <operator>EqualTo</operator>
            <value>
                <numberValue>100.0</numberValue>
            </value>
        </filters>
        <filters>
            <field>RecordTypeId</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>012A0000000kZfwIAE</stringValue>
            </value>
        </filters>
        <object>Account</object>
        <recordTriggerType>Update</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
