<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Alert_to_Sales_Rep_when_information_is_missing_from_Opportunity_record</fullName>
        <ccEmails>mberkman@abstraktmg.com</ccEmails>
        <description>Alert to Sales Rep when information is missing from Opportunity record</description>
        <protected>false</protected>
        <recipients>
            <field>Sales_Rep_Email_Address2__c</field>
            <type>email</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>Abstrakt_Marketing_Group/DocuSign_Opportunity_Update_Notification_Email</template>
    </alerts>
    <fieldUpdates>
        <fullName>Update_Sales_Rep_Email_Address</fullName>
        <field>Sales_Rep_Email_Address2__c</field>
        <formula>dsfs__Parent_Status_Record__r.dsfs__Sender_Email__c</formula>
        <name>Update Sales Rep Email Address</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>true</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>Autopopulate the Sales Rep Email Address</fullName>
        <actions>
            <name>Update_Sales_Rep_Email_Address</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>dsfs__DocuSign_Recipient_Status__c.CreatedDate</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <triggerType>onCreateOnly</triggerType>
    </rules>
</Workflow>
