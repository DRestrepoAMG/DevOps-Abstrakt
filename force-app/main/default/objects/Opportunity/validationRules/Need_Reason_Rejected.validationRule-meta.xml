<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Need_Reason_Rejected</fullName>
    <active>false</active>
    <description>Denotes the reason why an opportunity stage is marked as rejected</description>
    <errorConditionFormula>AND
 (ISPICKVAL(StageName , &quot;Rejected&quot;),
ISBLANK(TEXT(Reason_Lost__c)),  RecordTypeId =&quot;0124w000001Yqpv&quot;)</errorConditionFormula>
    <errorDisplayField>Reason_Lost__c</errorDisplayField>
    <errorMessage>Need to populate field &quot;Reason Lost&quot; to save stage as rejected</errorMessage>
</ValidationRule>
