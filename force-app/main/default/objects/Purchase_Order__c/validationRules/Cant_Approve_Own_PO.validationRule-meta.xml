<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Cant_Approve_Own_PO</fullName>
    <active>false</active>
    <description>Owner can&apos;t change PO Status to Approved.</description>
    <errorConditionFormula>AND( $User.Id &lt;&gt;  OwnerId,
  ISPICKVAL(PO_Status__c, &quot;Approved&quot;))</errorConditionFormula>
    <errorMessage>Only Approving Manager can update PO Status</errorMessage>
</ValidationRule>
