<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Operations_Required_on_Completed</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
ISPICKVAL(Status__c,&quot;Completed&quot;),
RecordTypeId=&apos;0124w000001Yq91&apos;,
	OR(
	ISBLANK(Text(Success_Percentages_Reviewed__c)),
	ISBLANK(Text(State_of_Pipeline_Document_Reviewed__c))
		)
	)</errorConditionFormula>
    <errorMessage>These fields cannot be blank when Status = Completed:

Success Percentages Reviewed, State of Pipeline Document Reviewed</errorMessage>
</ValidationRule>
