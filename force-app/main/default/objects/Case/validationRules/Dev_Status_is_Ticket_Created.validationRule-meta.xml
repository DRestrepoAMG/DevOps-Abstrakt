<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Dev_Status_is_Ticket_Created</fullName>
    <active>true</active>
    <errorConditionFormula>ISPICKVAL(Dev_Status__c,&apos;Ticket Created&apos;) &amp;&amp;
OR (
ISBLANK(Ticket__c) ,
ISBLANK(Text(Dev_Team_Allocated__c))
)</errorConditionFormula>
    <errorMessage>Ticket # and Dev Team Allocated must be populated when Dev Status = Ticket Created</errorMessage>
</ValidationRule>
